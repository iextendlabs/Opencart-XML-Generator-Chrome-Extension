{
    "manifest_version": 3,
    "name": "GitHub OCMOD Generator",
    "version": "1.0",
    "description": "Generate OCMOD XML from GitHub pull request diffs by highlighting text.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png"
        }
    },
    "permissions": [
        "scripting",
        "storage",
        "clipboardRead"
    ],
    "host_permissions": [
        "https://github.com/*/pull/*/commits*"
    ],
    "background": {
        "service_worker": "background.js"
    }
}